// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id String @id @default(uuid())
  quote String
  author String @default("Anonymous")
  verified Boolean
  categories Category[]
}

model Category {
  id String @id @default(uuid())
  name String
  quotes Quote[]
}